{
    "name": "datatheke/pager-bundle",
    "description": "Pager & DataGrid bundle for Symfony",
    "type": "symfony-bundle",
    "keywords": ["pager", "paginator", "datagrid", "jqGrid", "Flexigrid", "Dynatable", "Autocomplete", "Typeahead", "DataTables", "bootgrid"],
    "homepage": "https://github.com/datatheke/DatathekePagerBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "iamluc",
            "email": "luc@vieillescazes.net"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": "~2.3|~3.0",
        "symfony/options-resolver": "~2.3|~3.0",
        "symfony/property-access": "~2.3|~3.0",
        "symfony/form": "~2.3|~3.0",
        "symfony/console": "~2.3|~3.0",
        "symfony/http-foundation": "~2.3|~3.0",
        "symfony/dependency-injection": "~2.3|~3.0",
        "symfony/http-kernel": "~2.3|~3.0",
        "symfony/config": "~2.3|~3.0",
        "symfony/routing": "~2.3|~3.0"
    },
    "require-dev": {
        "ext-pdo_sqlite": "*",
        "doctrine/orm": "~2.3",
        "jms/serializer": "~0.16",
        "pagerfanta/pagerfanta": "~1.0",
        "phpunit/phpunit": "^4.0"
    },
    "suggest": {
        "doctrine/doctrine-bundle": "To use ORMQueryBuilderAdapter and ORMEntityAdapter",
        "doctrine/orm": "To use ORMQueryBuilderAdapter and ORMEntityAdapter",
        "doctrine/mongodb-odm-bundle": "To use MongoDBQueryBuilderAdapter and MongoDBDocumentAdapter",
        "jms/serializer-bundle": "To serialize Pager and DataGrid"
    },
    "autoload": {
        "psr-4": {
            "Datatheke\\Bundle\\PagerBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    }
}
