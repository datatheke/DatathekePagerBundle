{
    "name": "datatheke/pager-bundle",
    "description": "Pager & DataGrid bundle for Symfony2",
    "type": "symfony-bundle",
    "keywords": ["pager", "paginator", "datagrid", "jqGrid", "Flexigrid", "Dynatable", "Autocomplete", "Typeahead", "DataTables"],
    "homepage": "https://github.com/datatheke/DatathekePagerBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "iamluc",
            "email": "luc@vieillescazes.net"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": "~2.3",
        "symfony/finder": "~2.3",
        "symfony/options-resolver": "~2.3",
        "symfony/property-access": "~2.3"
    },
    "require-dev": {
        "ext-pdo_sqlite": "*",
        "doctrine/orm": "~2.3"
    },
    "suggest": {
        "doctrine/doctrine-bundle": "To use ORMQueryBuilderAdapter and ORMEntityAdapter",
        "doctrine/orm": "To use ORMQueryBuilderAdapter and ORMEntityAdapter",
        "doctrine/mongodb-odm-bundle": "To use MongoDBQueryBuilderAdapter and MongoDBDocumentAdapter",
        "jms/serializer": "To serialize Pager and DataGrid"
    },
    "autoload": {
        "psr-0": {
            "Datatheke\\Bundle\\PagerBundle": ""
        }
    },
    "target-dir": "Datatheke/Bundle/PagerBundle"
}
